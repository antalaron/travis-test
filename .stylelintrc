{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "function",
                    "if",
                    "each",
                    "include",
                    "mixin"
                ]
            }
        ],
        "indentation": 4,
        "number-leading-zero": "never",
        "no-descending-specificity": null
    }
}